extends ../layout

block content
    h1 课堂
    hr
    .row
        .col-md-6
            table.table
                thead
                    tr
                        td
                        td 能理范围
                tbody
                    each ratingGroup in data
                        tr
                            td
                                a(href="./rating/group/"+ratingGroup._id)| 详细
                            td=ratingGroup.name
            form(name="group",action="rating/group")
                label(for="groupName")
                input(type="text",name="groupName")
                input(type="submit", action="group")


block script
    script.
        $(function(){

             $('form[name="group"]').submit(function(e) { 
                e.preventDefault();
                var form = $(this);
                $.post(form.attr('action'), { 
                    _csrf:"#{_csrf}",
                    groupName: form.find("input[name='groupName']").val(),
                }, function(data){
                    console.log(data);
                }, "text" );
            });


        })